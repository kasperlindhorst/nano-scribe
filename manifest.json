{
  "manifest_version": 3,
  "name": "Nano Scribe",
  "version": "0.1",
  "description": "Summarizes, explains, and rewrites complex text using Gemini Nano with a click of a button.",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting",
    "sidePanel"
  ],
  "background": {
    "service_worker": "src/service-worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_width": 400,
    "default_height": 1200,
    "default_path": "templates/side-panel.html"
  },
  "icons": {
    "16": "icons/lexi-placeholder-16.png",
    "64": "icons/lexi-placeholder-64.png",
    "128": "icons/lexi-placeholder-128.png"
  }
}